<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/parentCardView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/glossybox1"
        android:layout_marginTop="5sp"
        android:paddingEnd="15dp"
        android:paddingStart="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/store_info_layout"
                    android:layout_width="match_parent"
                    android:layout_marginStart="8sp"
                    android:layout_marginEnd="10dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/store_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/arrow"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="21dp"
                            android:src="@drawable/logo_0"
                            android:scaleType="fitStart"/>
                        <TextView
                            android:id="@+id/listName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:maxLines="1"
                            android:minLines="1"
                            tools:ignore="RtlSymmetry" />
                        <TextView
                            android:id="@+id/storeName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:minLines="1"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/storeAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:maxLines="3"
                            android:minLines="3"
                            android:textSize="12sp" />
                    </LinearLayout>

                </RelativeLayout>
            </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/counter_layout"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="3dp"
        android:padding="5dp"
        android:background="@drawable/rounded_counter">
        <TextView
            android:id="@+id/counter_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="100"
            android:textSize="13sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


</RelativeLayout>
